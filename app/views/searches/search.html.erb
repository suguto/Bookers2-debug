  <table class = "table table-hover table-inverse">
    <% if @range == "User" %>
      <h2>Users search for "<%= @user %>" </h2>

        <thead>
          <th>name</th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image,size:"100x100" %></td>
            <td><%= link_to user.name, user_path(user) %></td>
          </tr>
        </tbody>
      <% end %>

    <% elsif @range == "Book" %>
      <h2>Books search for "<%= @book %>"</h2>

        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size:"100x100" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
      <% end %>
    <% end %>
  </table>
