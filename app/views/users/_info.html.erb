<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th><%= link_to "follows", user_relationships_following_path(user) %></th>
    <th><%= user.followings.count %></th>
  </tr>
  <tr>
    <th><%= link_to "followers", user_relationships_follower_path(user) %></th>
    <th><%= user.followers.count %></th>
  </tr>
</table>
  <% if user != current_user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す",user_relationship_path(user), method: :delete, class:"btn btn-success btn-sm btn-block" %>
    <% else %>
      <%= link_to "フォローする",user_relationships_path(user), method: :post, class:"btn btn-info btn-sm btn-block"%>
    <% end %>
  <% end %><br>



<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>