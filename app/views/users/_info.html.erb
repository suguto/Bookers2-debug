<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= user.followings.count %></th>
  </tr>
  <tr>
    <th>follwers</th>
    <th><%= user.follwers.count %></th>
  </tr>
</table>
  <% if user.id != current_user %>
    <% if current_user.following? %>
      <%= link_to "フォロー外す",user_relationship_path(current_user), method: :delete, class:"btn btn-success btn-sm btn-block" %>
    <% else %>
      <%= link_to "フォローする",user_relationship_path(current_user), method: :post, class:"btn btn-info btn-sm btn-block"%>
    <% end %>
  <% end %>


<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>