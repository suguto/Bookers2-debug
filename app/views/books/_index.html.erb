<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>

       <% if current_user.favorited_by?(book) %>
        <td><%= link_to favorites_path(book_num: book.id),method: :delete do %>
            ♥
            <% end %>
        </td>

       <% else %>
        <td><%= link_to favorites_path(book_num: book.id), method: :post do %>
             ♡
             <% end %>
        </td>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>